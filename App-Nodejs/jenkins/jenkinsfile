pipeline {
    agent {
        docker {
            image 'node:lts-alpine3.19'
            args '-p 3000:3000'
        }
    }
    stages {
        stage ('Build') {
            steps {
                // sh 'pwd'
                // sh 'ls -l App-Nodejs'
                // sh 'cd App-Nodejs/'
                // sh 'ls -l'
                sh 'chown -R 105:111 App-Nodejs/*'
                sh 'npm install --prefix ./App-Nodejs build'
            }
        }
    }
}