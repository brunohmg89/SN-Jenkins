pipeline {
    agent {
        docker {
            image 'node:lts-alpine3.19'
            args '-p 3000:3000'
        }
    }
    stages {
        stage ('Build') {
            steps {
                sh 'pwd'
                sh 'ls -l'
                sh 'cd App-Nodejs/'
                sh 'ls -l'
                // sh 'npm install'
            }
        }
    }
}