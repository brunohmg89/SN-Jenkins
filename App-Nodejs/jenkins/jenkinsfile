pipeline {
    agent {
        docker {
            image 'node'
            args '-p 3000:3000'
        }
    }
    stages {
        stage ('Build') {
            steps {
                // sh 'chown -R 105:111 App-Nodejs'
                // sh 'ls -lh App-Nodejs'
                // sh 'ls -lha /.npm'
                dir ('App-Nodejs') {     
                    // sh 'ls -lha'
                    sh 'npm init'
                    sh 'npm install'
                }
                // sh 'ls -l App-Nodejs'
                // sh 'cd App-Nodejs/'
                // sh 'ls -l'
                // sh 'chown -R 105:111 App-Nodejs'
                // sh 'npm install --prefix ./App-Nodejs build'
            }
        }
    }
}